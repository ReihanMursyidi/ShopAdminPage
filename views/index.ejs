<!DOCTYPE html>
<html lang="id" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Admin Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 dark:bg-gray-950 text-gray-800 dark:text-gray-300 font-sans p-6 min-h-screen transition-colors duration-300">

    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="lg:col-span-2">
            <h1 class="text-3xl font-bold mb-6 text-indigo-700 dark:text-indigo-400 flex items-center gap-2">
                <i class="fa-solid fa-gamepad"></i> Katalog Gaming Gear
            </h1>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% products.forEach(p => { %>
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition duration-300 border border-gray-200 dark:border-gray-700 overflow-hidden flex flex-col h-full">
                        
                        <div class="h-48 overflow-hidden relative group">
                            <img src="<%= p.imageUrl %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                            <div class="absolute top-2 right-2 px-2 py-1 rounded-md text-xs font-bold shadow-sm
                                <%= (p.Stock && p.Stock.amount > 0) ? 'bg-gray-900/80 text-white backdrop-blur' : 'bg-red-600 text-white' %>">
                                Stok: <%= p.Stock ? p.Stock.amount : 0 %>
                            </div>
                        </div>

                        <div class="p-5 flex flex-col justify-between flex-grow">
                            <div>
                                <h3 class="font-bold text-lg text-gray-800 dark:text-white leading-tight mb-2"><%= p.name %></h3>
                                
                                <p class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">
                                    <span class="text-sm font-normal text-gray-500 dark:text-gray-400">Rp</span> <%= p.price.toLocaleString('id-ID') %>
                                </p>
                            </div>
                            
                            <form action="/buy" method="POST" class="mt-4 flex gap-2 items-center">
                                <input type="hidden" name="productId" value="<%= p.id %>">
                                
                                <% const stockCount = p.Stock ? p.Stock.amount : 0; %>

                                <div class="relative">
                                    <input type="number" name="quantity" value="1" min="1" max="<%= stockCount %>" 
                                           class="w-20 border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition dark:text-white text-center"
                                           <%= stockCount === 0 ? 'disabled' : '' %>>
                                     <span class="text-xs text-gray-400 dark:text-gray-500 absolute -bottom-4 left-1">Qty</span>
                                </div>
                                       
                                <button type="submit" 
                                        class="flex-1 bg-gradient-to-r from-indigo-600 to-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:from-indigo-700 hover:to-blue-700 transition-all disabled:from-gray-400 disabled:to-gray-500 disabled:cursor-not-allowed shadow-sm"
                                        <%= stockCount === 0 ? 'disabled' : '' %>>
                                    <%= stockCount === 0 ? 'Stok Habis' : 'Beli Sekarang' %>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md border-t-4 border-indigo-500 dark:border-indigo-400 h-fit sticky top-6">
            <div class="flex items-center justify-between mb-6 pb-4 border-b dark:border-gray-700">
                <h2 class="text-xl font-bold text-gray-800 dark:text-white">ðŸ“‹ Transaksi Terkini</h2>
                <span class="bg-indigo-100 dark:bg-indigo-900/50 text-indigo-600 dark:text-indigo-300 px-3 py-1 rounded-full text-xs font-medium">
                    Live History
                </span>
            </div>

            <div class="space-y-4 max-h-[70vh] overflow-y-auto pr-2 scrollbar-thin scrollbar-thumb-gray-300 dark:scrollbar-thumb-gray-600">
                <% if (purchases.length === 0) { %>
                    <div class="text-center py-8 text-gray-400 dark:text-gray-500 flex flex-col items-center">
                        <i class="fa-solid fa-receipt text-4xl mb-2 opacity-50"></i>
                        <p class="italic">Belum ada transaksi masuk.</p>
                    </div>
                <% } %>

                <% purchases.forEach(t => { %>
                    <div class="p-4 rounded-lg border transition-colors duration-300
                        <%= t.status === 'cancelled' 
                            ? 'bg-red-50 dark:bg-red-950/30 border-red-100 dark:border-red-900/50' 
                            : 'bg-green-50 dark:bg-green-950/30 border-green-100 dark:border-green-900/50' %>">
                        
                        <div class="flex justify-between items-start gap-4">
                            <div>
                                <p class="font-bold text-sm text-gray-800 dark:text-gray-200 line-clamp-1">
                                    <%= t.Product ? t.Product.name : 'Produk Tidak Dikenal' %>
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                    <span class="font-semibold"><%= t.quantity %> item</span> x Rp <%= t.quantity ? (t.totalPrice / t.quantity).toLocaleString('id-ID') : 0 %>
                                </p>
                                <p class="text-[10px] text-gray-400 dark:text-gray-500 mt-2 flex items-center gap-1">
                                    <i class="fa-regular fa-clock"></i>
                                    <%= t.createdAt.toLocaleString('id-ID', { dateStyle: 'medium', timeStyle: 'short' }) %>
                                </p>
                            </div>
                            
                            <div class="text-right shrink-0">
                                <p class="font-bold text-sm 
                                    <%= t.status === 'cancelled' ? 'text-red-500 dark:text-red-400 line-through' : 'text-green-600 dark:text-green-400' %>">
                                    Rp <%= t.totalPrice.toLocaleString('id-ID') %>
                                </p>
                                <div class="mt-1 inline-flex items-center gap-1 px-2 py-0.5 rounded-md text-[10px] font-bold uppercase tracking-wider
                                    <%= t.status === 'cancelled' ? 'bg-red-100 dark:bg-red-900/50 text-red-600 dark:text-red-400' : 'bg-green-100 dark:bg-green-900/50 text-green-600 dark:text-green-400' %>">
                                    <i class="fa-solid <%= t.status === 'cancelled' ? 'fa-xmark' : 'fa-check' %>"></i>
                                    <%= t.status === 'completed' ? 'Sukses' : 'Batal' %>
                                </div>
                            </div>
                        </div>

                        <% if (t.status !== 'cancelled') { %>
                            <form action="/cancel/<%= t.id %>" method="POST" class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700/50 text-right">
                                <button type="submit" onclick="return confirm('Batalkan transaksi ini dan kembalikan stok?')" 
                                        class="text-xs text-red-500 dark:text-red-400 hover:text-red-700 dark:hover:text-red-300 font-medium transition flex items-center gap-1 ml-auto">
                                    <i class="fa-solid fa-ban"></i> Batalkan Pesanan
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        </div>

    </div>
</body>
</html>